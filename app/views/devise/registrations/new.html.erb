<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= t('.sign_up') %></h3>
    </div>
    <div class="panel-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <fieldset>
        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Digite seu nome" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:"Digite seu nome"  %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Digite seu nome"  %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Digite seu nome"  %>
        </div>
        </fieldset>
        <div class="actions">
          <%= f.submit t('.sign_up'), class: "btn btn-lg btn-success btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
