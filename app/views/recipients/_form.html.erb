    <%= f.label :agencia_dv %>
    <%= f.text_field :agencia_dv, maxlength:2, required: true %>
  </div>

  <div class="field">
    <%= f.label :conta %>
    <%= f.text_field :conta, maxlength:10, required: true %>
  </div>

  <div class="field">
    <%= f.label :conta_dv %>
    <%= f.text_field :conta_dv, maxlength:2, required: true %>
  </div>

  <div class="field">
    <%= f.label :legal_name %>
    <%= f.text_field :legal_name, maxlength:60, required: true %>
  </div>

  <div class="field">
    <%= f.label :document_number %>
    <%= f.text_field :document_number, maxlength:14, required: true %>
  </div>

  <div class="field">
    <%= f.label :transfer_enabled %>
